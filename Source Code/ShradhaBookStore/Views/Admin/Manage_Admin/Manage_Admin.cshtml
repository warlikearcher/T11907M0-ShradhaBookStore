    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card" ">
                        <div class="card-body" id="chartContainer" style="min-height:400px;height: 502px; width: 100%;">

                        </div>
                    </div>

                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div id="chartContainer2" style="min-height:400px;height: 502px; width: 90%;">
                        </div>
                    </div>

                </div>
                <div class="col-lg-12">
                    <h3 style="text-align:center">Note</h3>
                </div>
                <div class="col-lg-12">
                    <div class="card">
                        <table id="example" class="table">
                            <thead>
                                <tr>
                                    <th>Catagory code</th>
                                    <th>Catagory Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Table)
                                {
                    <tr>
                        <td>@item.CategoryCode</td>
                        <td>@item.CategoryName</td>
                    </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
