@model ShradhaBookStore.Models.Banner
@{
    ViewData["Title"] = "Add_Banner";
}

@{
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Add new Banner</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <!-- content -->
                <form asp-action="Add_Banner" asp-controller="Banner" method="post" enctype="multipart/form-data" style="vertical-align: middle;">

                    <div class="form-group">
                        <label class="control-label">Upload Banner</label>
                        <br />
                        <input type="file" name="file" class="form-control" accept="~/Image/*">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>


@Html.Raw(TempData["msg"])