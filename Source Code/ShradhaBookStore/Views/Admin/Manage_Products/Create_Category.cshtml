@model ShradhaBookStore.Models.Category
@{
    ViewData["Title"] = "Create_Category";
}
@{
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <!-- content -->
                <form asp-action="Create_Category" asp-controller="Manage_Products" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Category Code</label>
                                <br />
                                @Html.EditorFor(p=>p.CategoryCode)
                                @Html.ValidationMessageFor(p=>p.CategoryCode)
                            </div>
                            <div class="form-group">
                                <label class="control-label">Category Name</label>
                                <br />
                                @Html.EditorFor(p => p.CategoryName)
                                @Html.ValidationMessageFor(p => p.CategoryName)
                            </div>
                            <br />

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@Html.Raw(TempData["msg"])