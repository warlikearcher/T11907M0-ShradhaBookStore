@model IEnumerable<ShradhaBookStore.Models.Shippingorder>
@{ ViewData["Title"] = "Manage Order"; }
@{ Layout = "~/Views/Admin/Layout/_Layout.cshtml"; }
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">List Orders</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <div class="container-fluid">
            <!-- /.row -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">List Orders</h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0" style="height: 500px;">
                            @if (Model == null)
                            {
                        <table class="table table-head-fixed text-nowrap">
                            <tr>
                                <td>No orders have been confirmed</td>
                            </tr>
                        </table>}
                    else
                    {
                        <table class="table table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>FullName</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Address2</th>
                                    <th>Street/..</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                        <tr>
                            <td>@item.order.Email</td>
                            <td>@item.user.FullName</td>
                            <td>@item.user.Phone</td>
                            <td>@item.order.AddressLine1</td>
                            @if (item.order.AddressLine2 != null)
                            {
                        <td>@item.order.AddressLine2</td>}
                            <td>@item.order.To</td>

                            <td>@item.order.Status</td>
                            @if (item.order.Status == "Order not confirm" || item.order.Status != "Order is Denight!")
                            {
                        <td><a asp-action="AcceptOrder" asp-controller="Manage_Oders" asp-route-id="@item.order.OrderNo">AcceptOrder</a></td>
                                                <td><a asp-action="Denight" asp-controller="Manage_Oders" asp-route-id="@item.order.OrderNo">TuChoiDonHang</a></td>
}
                        </tr>
}
                            </tbody>
                        </table>}
                        </div>
                        <!-- /.card-body -->


                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>